package com.ibm.demo.rcpclient.util;

import org.eclipse.swt.SWT;
import org.eclipse.swt.layout.GridData;
import org.eclipse.swt.widgets.Composite;
import org.eclipse.swt.widgets.Label;
import org.eclipse.swt.widgets.Text;

public class WidgetsFactory {
	public Text getText(Composite parent,int style,String labelname){
		Text text=null;
		Label accountLabel=new Label(parent,SWT.RIGHT);
		accountLabel.setText("ук╨е:");
		GridData layoutData = new GridData(SWT.END,
				SWT.CENTER,true,false);
		accountLabel.setLayoutData(layoutData);
		text=new Text(parent,SWT.FILL);	
		layoutData = new GridData(SWT.CENTER,
					SWT.CENTER,true,false);
		text.setLayoutData(layoutData);	
		return text;
	}
}
